# ==========================================
# Sentrix - Environment Variables Template
# ==========================================

# ==========================================
# PostgreSQL Database
# ==========================================
POSTGRES_DB=sentrix
POSTGRES_USER=sentrix_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ==========================================
# Backend Security
# ==========================================
SECRET_KEY=CHANGE_ME_SECRET_KEY_HERE
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_HERE

# ==========================================
# Supabase (Storage y Auth)
# ==========================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_KEY=sb_publishable_TU_KEY_AQUI
SUPABASE_SERVICE_ROLE_KEY=sb_secret_TU_SECRET_AQUI

# ==========================================
# Frontend & Deployment
# ==========================================
# URL del frontend (Vercel)
FRONTEND_URL=https://sentrix-jade.vercel.app

DOKPLOY_DOMAIN=sentrix.ejemplo.com

# ==========================================
# Environment & Logging
# ==========================================
ENVIRONMENT=production
LOG_LEVEL=INFO
