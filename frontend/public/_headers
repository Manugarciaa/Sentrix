# Cache headers for static assets
# This file can be used with Netlify, Vercel, or converted to nginx config

# HTML - no cache for HTML files (always fetch fresh)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# CSS and JS with hash in filename - cache for 1 year
/assets/js/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

/assets/css/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Images with hash - cache for 1 year
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - cache for 1 year
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Images in public root - cache for 1 week
/images/*
  Cache-Control: public, max-age=604800

# Icons and favicons - cache for 1 week
/*.png
  Cache-Control: public, max-age=604800

/*.jpg
  Cache-Control: public, max-age=604800

/*.svg
  Cache-Control: public, max-age=604800

# Manifest and service worker - no cache
/manifest.json
  Cache-Control: public, max-age=0, must-revalidate

/sw.js
  Cache-Control: public, max-age=0, must-revalidate
